! General prettifications
urxvt*scrollBar: false
urxvt.iso14755: False

! Copypasta https://github.com/muennich/urxvt-perls
urxvt.perl-ext-common:      clipboard
urxvt.keysym.C-V:           perl:clipboard:paste
urxvt.keysym.C-C:           perl:clipboard:copy

! Powerline-patched font
urxvt.font: xft:DejaVu Sans Mono for Powerline:size=10:hintstyle=hintfull

! urxvt Monokai theme / color scheme
urxvt*background : #272822 ! warm gray
urxvt*foreground : #ffffff ! white
urxvt*cursorColor: #7e40a5 ! purple

urxvt*color0     : #101010 ! dark
urxvt*color1     : #960050 ! dark pink
urxvt*color2     : #66aa11 ! lime green
urxvt*color3     : #c47f2c ! orange
urxvt*color4     : #30309b ! blue
urxvt*color5     : #7e40a5 ! purple
urxvt*color6     : #89b6e2 ! cyan
urxvt*color7     : #9999aa ! light gray
urxvt*color8     : #75715E ! light warm gray
urxvt*color9     : #ff0090 ! hot pink
urxvt*color10    : #80ff00 ! light lime green
urxvt*color11    : #ffba68 ! light orange
urxvt*color12    : #5f5fee ! light blue
urxvt*color13    : #bb88dd ! light purple
urxvt*color14    : #4eb4fa ! light cyan
urxvt*color15    : #ffffff ! white


! Correcting ctrl-arrows behaviour in Vim
urxvt.keysym.Control-Up:    \033[1;5A
urxvt.keysym.Control-Down:  \033[1;5B
urxvt.keysym.Control-Left:  \033[1;5D
urxvt.keysym.Control-Right: \033[1;5C
